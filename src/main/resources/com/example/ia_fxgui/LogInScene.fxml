<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane
        stylesheets="@sceneStyle.css"
        fx:id="loginPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ia_fxgui.SceneController"
            prefWidth="400" prefHeight="300">

<!-- Header -->
<top>
   <VBox alignment="CENTER">
      <Label text="Welcome to Your App" styleClass="header-label" />
   </VBox>
</top>

<!-- Center - Login and Register Forms -->
<center>
   <TabPane>
      <!-- Login Tab -->
      <tabs>
         <Tab text="Login">
            <content>
               <VBox spacing="10" alignment="CENTER">
                  <Label text="Login to Your Account" styleClass="form-label" />

                  <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
                  <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />

                  <Button text="Login" onAction="#handleLogin" styleClass="action-button" />

                  <Hyperlink onAction="#showRegisterScreen" text="Register" />
               </VBox>
            </content>
         </Tab>
      </tabs>
</TabPane>

</center>



         <!-- Register Tab -->






<!-- Footer -->
<bottom>
   <HBox alignment="CENTER">
      <Label text="Your App Â© 2024" styleClass="footer-label" />
   </HBox>
</bottom>
</BorderPane>
